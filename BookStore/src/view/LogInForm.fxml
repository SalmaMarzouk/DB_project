<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.PasswordField?>
<GridPane fx:controller="control.LogInController"
          xmlns:fx="http://javafx.com/fxml" style="-fx-font-family:Arial;" alignment="center" hgap="20" vgap="20">
    <Label text="Login Form" GridPane.rowIndex="1" GridPane.columnIndex="1" GridPane.columnSpan="2"
           GridPane.halignment="CENTER"/>
    <Label GridPane.rowIndex="2" GridPane.columnIndex="1" text="Username"/>
    <TextField fx:id="usernameField" GridPane.rowIndex="2" GridPane.columnIndex="2"/>
    <Label GridPane.rowIndex="3" GridPane.columnIndex="1" text="Password"/>
    <PasswordField fx:id="passwordField" GridPane.rowIndex="3" GridPane.columnIndex="2"/>
    <Button onAction="#logIn" fx:id="loginButton" GridPane.rowIndex="4" GridPane.columnIndex="1" GridPane.columnSpan="2"
            GridPane.halignment="CENTER" text="Login"/>

</GridPane>